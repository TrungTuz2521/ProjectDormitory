@model dynamic
@{
    ViewData["Title"] = "Thống kê yêu cầu";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}
@section Styles {
    <link href="~/css/ThongKeYeuCau.css" rel="stylesheet"/>
}

<div class="request-page container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 text-primary fw-bold">Thống kê yêu cầu</h3>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm shadow-sm">
            Quay lại danh sách
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm card-stats card-total h-100">
                <div class="card-body text-white text-center">
                    <h2 class="mb-1">@Model.Tong</h2>
                    <p class="mb-0">Tổng yêu cầu</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm card-stats card-pending h-100">
                <div class="card-body text-center">
                    <h2 class="mb-1 text-warning">@Model.ChoXuLy</h2>
                    <p class="mb-0 text-muted">Chờ xử lý</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm card-stats card-processing h-100">
                <div class="card-body text-center">
                    <h2 class="mb-1" style="color: #0056b3;">@Model.DangXuLy</h2>
                    <p class="mb-0 text-muted">Đang xử lý</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm card-stats card-completed h-100">
                <div class="card-body text-center">
                    <h2 class="mb-1 text-success">@Model.DaXuLy</h2>
                    <p class="mb-0 text-muted">Đã xử lý</p>
                </div>
            </div>
        </div>
    </div>
</div>