@model dynamic
@{
    ViewData["Title"] = "Thống kê yêu cầu";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 text-primary fw-bold">Thống kê yêu cầu</h3>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm shadow-sm">
            Quay lại danh sách
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center p-4 bg-gradient"
                 style="background: linear-gradient(135deg, #6c757d, #495057);">
                <div class="card-body text-white">
                    <h2 class="display-5 mb-1 fw-bold">@Model.Tong</h2>
                    <p class="mb-0 opacity-75">Tổng yêu cầu</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center p-4 bg-warning-subtle">
                <div class="card-body">
                    <h2 class="display-5 mb-1 fw-bold text-warning">@Model.ChoXuLy</h2>
                    <p class="mb-0 text-muted">Chờ xử lý</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center p-4 bg-primary-subtle">
                <div class="card-body">
                    <h2 class="display-5 mb-1 fw-bold text-primary">@Model.DangXuLy</h2>
                    <p class="mb-0 text-muted">Đang xử lý</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center p-4 bg-success-subtle">
                <div class="card-body">
                    <h2 class="display-5 mb-1 fw-bold text-success">@Model.DaXuLy</h2>
                    <p class="mb-0 text-muted">Đã xử lý</p>
                </div>
            </div>
        </div>
    </div>
</div>