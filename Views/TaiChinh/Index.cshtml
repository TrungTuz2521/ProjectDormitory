@model KTX.Models.TaiChinhViewModel
@{
    ViewData["Title"] = "Quản Lý Tài Chính";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}
@section Styles {
    <link href="~/css/QuanLyTaiChinh.css" rel="stylesheet" />
}
<div class="main-content finance-page">
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-primary">
                <i class="fas fa-money-bill-wave me-2"></i>Quản Lý Tài Chính KTX
            </h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link @(Model.LoaiHienThi == "phong" ? "active" : "")"
               href="@Url.Action("Index", new { loai = "phong" })">
                <i class="fas fa-home me-2"></i>Tiền Phòng
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.LoaiHienThi == "diennuoc" ? "active" : "")"
               href="@Url.Action("Index", new { loai = "diennuoc" })">
                <i class="fas fa-bolt me-2"></i>Tiền Điện Nước
            </a>
        </li>
        <li class="nav-item ms-auto">
            <a class="nav-link text-success" href="@Url.Action("ThongKe")">
                <i class="fas fa-chart-bar me-2"></i>Thống Kê
            </a>
        </li>
    </ul>

    <!-- TIỀN PHÒNG -->
    @if (Model.LoaiHienThi == "phong")
    {
        <div class="row">
            @foreach (var phong in Model.ChiTietTienPhongTheoPhong)
            {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between">
                            <h6 class="mb-0"><i class="fas fa-door-open me-2"></i>Phòng @phong.MaP</h6>
                            <small>@phong.SinhViens.Count sinh viên</small>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>MSV</th>
                                        <th>Họ tên</th>
                                        <th>Tiền</th>
                                        <th>Hạn TT</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sv in phong.SinhViens)
                                    {
                                        var tp = sv.TienPhong;
                                        <tr>
                                            <td>@sv.Msv</td>
                                            <td>@sv.HoTen</td>
                                            <td class="fw-bold text-primary">@(tp?.TongTienP?.ToString("N0") ?? "") VNĐ</td>
                                            <td>@(tp?.HanTtp)</td>
                                            <td>
                                                <span class="badge @(tp?.TrangThaiTtp == "Đã thanh toán" ? " bg-success " : "bg-warning text-dark")">
                                                    @tp?.TrangThaiTtp
                                                </span>
                                            </td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- TIỀN ĐIỆN NƯỚC -->
    @if (Model.LoaiHienThi == "diennuoc")
    {
        <!-- Bộ lọc đợt -->
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <input type="hidden" name="loai" value="diennuoc" />
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Lọc:</label>
                        <select name="dotTtdn" class="form-select" onchange="this.form.submit()">
                            <option value="">-- Tất cả --</option>
                            @foreach (var dot in Model.DanhSachDotTtdn)
                            {
                                <option value="@dot" selected="@(Model.DotTtdnHienTai == @dot)">Đợt @dot</option>
                            }
                        </select>
                    </div>
                    @if (Model.DotTtdnHienTai.HasValue)
                    {
                        <div class="col-md-2">
                            <a href="@Url.Action("Index", new { loai = "diennuoc" })"
                               class="btn btn-secondary w-100">Xóa</a>
                        </div>
                    }
                </form>
            </div>
        </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold">Quản lý điện nước</h3>
                <a asp-action="NhapDienNuoc" class="btn btn-success shadow-sm px-3 py-2">
                    <i class="bi bi-plus-circle me-1"></i> Thêm hóa đơn điện nước 
                </a>
            </div>
        <!-- Danh sách theo phòng -->
        <div class="row">
            @foreach (var phong in Model.ChiTietDienNuocTheoPhong)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-warning text-dark d-flex justify-content-between">
                            <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Phòng @phong.MaP</h6>
                            <span class="badge bg-dark">Tháng @phong.DotTtdn</span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-danger mb-0">@phong.TongTien?.ToString("N0") VNĐ</h5>
                                <span class="badge @(phong.TrangThai == "Đã thanh toán" ? "bg-success" : "bg-warning text-dark")">
                                    @phong.TrangThai
                                </span>
                            </div>
                            <ul class="list-group list-group-flush">
                                @foreach (var sv in phong.SinhViens)
                                {
                                    var dn = sv.TienDienNuoc;
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <div>
                                            <strong>@sv.Msv</strong> - @sv.HoTen
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted d-block">
                                                @dn.SoDien kWh | @dn.SoNuoc m³
                                            </small>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("ChiTietDienNuoc", new { id = dn.MaHddn })"
                                                   class="btn btn-info"><i class="fas fa-eye"></i></a>
                                                @if (dn.TrangThaiTtdn != "Đã thanh toán")
                                                {
                                                    <a href="@Url.Action("ThanhToanDienNuoc", new { id = dn.MaHddn })"
                                                       class="btn btn-success"><i class="fas fa-money-bill"></i></a>
                                                }
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
</div>

@section Scripts {
    <script>
        setTimeout(() => {
            const alert = document.querySelector('.alert-success');
            if (alert) new bootstrap.Alert(alert).close();
        }, 5000);
    </script>
}