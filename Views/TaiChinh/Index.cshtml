@model KTX.Models.TaiChinhViewModel
@{
    ViewData["Title"] = "Quản Lý Tài Chính";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}
@section Styles {
    <link href="~/css/QuanLyTaiChinh.css" rel="stylesheet" />
}
<div class="main-content finance-page">
    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold text-primary">
                    <i class="fas fa-money-bill-wave me-2"></i>Quản Lý Tài Chính KTX
                </h2>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Tabs -->
        <ul class="nav nav-tabs mb-4" role="tablist">
            <li class="nav-item">
                <a class="nav-link @(Model.LoaiHienThi == "phong" ? "active" : "")"
                   href="@Url.Action("Index", new { loai = "phong" })">
                    <i class="fas fa-home me-2"></i>Tiền Phòng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.LoaiHienThi == "diennuoc" ? "active" : "")"
                   href="@Url.Action("Index", new { loai = "diennuoc" })">
                    <i class="fas fa-bolt me-2"></i>Tiền Điện Nước
                </a>
            </li>
            <li class="nav-item ms-auto">
                <a class="nav-link text-success" href="@Url.Action("ThongKe")">
                    <i class="fas fa-chart-bar me-2"></i>Thống Kê
                </a>
            </li>
        </ul>

        <!-- TIỀN PHÒNG -->
        @if (Model.LoaiHienThi == "phong")
        {
            <div class="row">
                @foreach (var phong in Model.ChiTietTienPhongTheoPhong)
                {
                    <div class="col-md-12 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-primary text-white d-flex justify-content-between">
                                <h6 class="mb-0"><i class="fas fa-door-open me-2"></i>Phòng @phong.MaP</h6>
                                <small>@phong.SinhViens.Count sinh viên</small>
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>MSV</th>
                                            <th>Họ tên</th>
                                            <th>Tiền</th>
                                            <th>Hạn TT</th>
                                            <th>Trạng thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var sv in phong.SinhViens)
                                        {
                                            var tp = sv.TienPhong;
                                            <tr>
                                                <td>@sv.Msv</td>
                                                <td>@sv.HoTen</td>
                                                <td class="fw-bold text-primary">@(tp?.TongTienP?.ToString("N0") ?? "") VNĐ</td>
                                                <td>@(tp?.HanTtp)</td>
                                                <td>
                                                    <span class="badge @(tp?.TrangThaiTtp == "Đã thanh toán" ? " bg-success " : "bg-warning text-dark")">
                                                        @tp?.TrangThaiTtp
                                                    </span>
                                                </td>
                                                <td></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- TIỀN ĐIỆN NƯỚC - CẬP NHẬT HIỂN THỊ CHI TIẾT -->
        @if (Model.LoaiHienThi == "diennuoc")
        {
            <!-- Bộ lọc đợt -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-end">
                        <input type="hidden" name="loai" value="diennuoc" />
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Lọc:</label>
                            <select name="dotTtdn" class="form-select" onchange="this.form.submit()">
                                <option value="">-- Tất cả --</option>
                                @foreach (var dot in Model.DanhSachDotTtdn)
                                {
                                    <option value="@dot" selected="@(Model.DotTtdnHienTai == @dot)">Đợt @dot</option>
                                }
                            </select>
                        </div>
                        @if (Model.DotTtdnHienTai.HasValue)
                        {
                            <div class="col-md-2">
                                <a href="@Url.Action("Index", new { loai = "diennuoc" })"
                                   class="btn btn-secondary w-100">Xóa</a>
                            </div>
                        }
                    </form>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold">Quản lý điện nước</h3>
                <a asp-action="NhapDienNuoc" class="btn btn-success shadow-sm px-3 py-2">
                    <i class="bi bi-plus-circle me-1"></i> Thêm hóa đơn điện nước
                </a>
            </div>

            <!-- Danh sách theo phòng - HIỂN THỊ CHI TIẾT TỪNG SINH VIÊN -->
            <div class="row">
                @foreach (var phong in Model.ChiTietDienNuocTheoPhong)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                                <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Phòng @phong.MaP</h6>
                                <div>
                                    <span class="badge bg-dark me-2">Tháng @phong.DotTtdn</span>
                                    <span class="badge @(phong.TrangThai == "Đã thanh toán" ? "bg-success" :
                                                                                              phong.TrangThai.Contains("Đã thu") ? "bg-info" : "bg-warning text-dark")">
                                @phong.TrangThai
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Tổng tiền phòng -->
                        <div class="alert alert-info mb-3">
                            <div class="d-flex justify-content-between">
                                <strong>Tổng tiền phòng:</strong>
                                <strong class="text-danger">@phong.TongTien?.ToString("N0") VNĐ</strong>
                            </div>
                            <small class="text-muted">
                                Chia cho @phong.TongSinhVien người =
                                @((phong.TongTien / (phong.TongSinhVien > 0 ? phong.TongSinhVien : 1))?.ToString("N0")) VNĐ/người
                            </small>
                        </div>

                                <!-- Chi tiết từng sinh viên -->
                                <ul class="list-group list-group-flush">
                            @foreach (var sv in phong.SinhViens)
                                    {
                                        <li class="list-group-item px-0">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <strong>@sv.Msv</strong> - @sv.HoTen
                                                    <br>
                                                    <span class="badge @(sv.TrangThaiCaNhan == "Đã thanh toán" ? "bg-success" : "bg-warning text-dark")">
                                                        @sv.TrangThaiCaNhan
                                                    </span>
                                                </div>
                                                <div class="text-end">
                                                    <div class="fw-bold text-primary">
                                                        @sv.SoTienPhai.ToString("N0") VNĐ
                                                    </div>
                                                    @if (sv.TrangThaiCaNhan == "Đã thanh toán")
                                                    {
                                                        <small class="text-success">
                                                            <i class="fas fa-check-circle"></i> @sv.NgayThanhToan?.ToString("dd/MM/yyyy")
                                                        </small>
                                                    }
                                                </div>
                                            </div>

                                            <!-- Nút hành động -->
                                            @if (sv.TrangThaiCaNhan != "Đã thanh toán")
                                            {
                                                <div class="mt-2">
                                                    <a href="@Url.Action("ThanhToanDienNuocCaNhan", new { maCtttdn = sv.MaCtttdn })"
                                                       class="btn btn-sm btn-success w-100">
                                                        <i class="fas fa-money-bill"></i> Thanh toán
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="fas fa-info-circle"></i> Đã thanh toán: @sv.SoTienDaTra?.ToString("N0") VNĐ
                                                    </small>
                                                </div>
                                            }
                                        </li>
                                    }
                                </ul>

                                <!-- Thông tin chi tiết hóa đơn -->
                                @{
                                    var firstSv = phong.SinhViens.FirstOrDefault();
                                }
                                @if (firstSv != null && firstSv.TienDienNuoc != null)
                                {
                                    <a href="@Url.Action("ChiTietDienNuoc", new { id = firstSv.TienDienNuoc.MaHddn })"
                                       class="btn btn-sm btn-outline-info w-100">
                                        <i class="fas fa-eye"></i> Xem chi tiết hóa đơn
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-secondary w-100" disabled>
                                        <i class="fas fa-eye-slash"></i> Không có dữ liệu hóa đơn
                                    </button>
                                }

                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(() => {
            const alert = document.querySelector('.alert-success');
            if (alert) new bootstrap.Alert(alert).close();
        }, 5000);
    </script>
}