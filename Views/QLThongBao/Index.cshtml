@model KTX.Models.ViewModels.ThongBaoListViewModel
@{
    ViewData["Title"] = "Quản lý Thông báo";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}

<h2>Quản lý Thông báo</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Tạo thông báo mới</a>

<!-- THÔNG BÁO CHUNG -->
<div class="card mb-4 border-info">
    <div class="card-header bg-info text-white">
        <h5>Thông báo chung (Tất cả sinh viên)</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.ThongBaoChung.Any())
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Nội dung</th>
                        <th>Ngày gửi</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ThongBaoChung)
                    {
                        <tr>
                            <td><strong>@item.TieuDe</strong></td>
                            <td>@item.NoiDung</td>
                            <td>@item.NgayTBFormatted</td>
                            <td>
                                <button class="btn btn-danger btn-sm delete-btn" data-id="@item.MaTB">Xóa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="p-3 text-muted">Chưa có thông báo chung.</p>
        }
    </div>
</div>

<!-- THÔNG BÁO RIÊNG -->
<div class="card border-secondary">
    <div class="card-header bg-secondary text-white">
        <h5>Thông báo riêng</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.ThongBaoRieng.Any())
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Sinh viên</th>
                        <th>Tiêu đề</th>
                        <th>Nội dung</th>
                        <th>Ngày</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ThongBaoRieng)
                    {
                        <tr>
                            <td>
                                <strong>@item.HoTen</strong><br />
                                <small class="text-muted">MSV: @item.MSV</small>
                            </td>
                            <td>@item.TieuDe</td>
                            <td>@item.NoiDung</td>
                            <td>@item.NgayTBFormatted</td>
                            <td>
                                <button class="btn btn-danger btn-sm delete-btn" data-id="@item.MaTB">Xóa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="p-3 text-muted">Chưa có thông báo riêng.</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).on('click', '.delete-btn', function () {
            if (!confirm('Xóa thông báo này?')) return;
            const id = $(this).data('id');
            $.post('@Url.Action("Delete")', { id: id }, function (res) {
                if (res.success) location.reload();
                else alert(res.message || 'Lỗi');
            });
        });
    </script>
}