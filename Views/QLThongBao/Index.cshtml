@model KTX.Models.ViewModels.ThongBaoListViewModel
@{
    ViewData["Title"] = "Quản lý Thông báo";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}

<div class="notification-page container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h3 class="mb-0 page-title text-primary fw-bold bi bi-bell-fill">Quản lý Thông báo</h3>
        <a asp-action="Create" class="btn btn-primary btn-create shadow-sm">
            Tạo thông báo mới
        </a>
    </div>

    <!-- THÔNG BÁO CHUNG -->
    <div class="notification-card card-common">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-bullhorn me-2"></i>
            <h5 class="mb-0">Thông báo chung</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.ThongBaoChung.Any())
            {
                <div class="card mb-4 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5>Thông báo chung</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <tbody>
                                @foreach (var item in Model.ThongBaoChung)
                                {
                                    <tr>
                                        <td><strong>@item.TieuDe</strong></td>
                                        <td>@item.NoiDung</td>
                                        <td>@item.NgayTBFormatted</td>
                                        <td><button class=" btn btn-sm btn-danger delete-btn" data-id="@item.MaTB">Xóa</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <p class="p-4 text-center text-muted mb-0">
                    Chưa có thông báo chung.
                </p>
            }
        </div>
    </div>

    <!-- THÔNG BÁO RIÊNG -->
    <div class="notification-card card-personal">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-person me-2"></i>
            <h5 class="mb-0">Thông báo riêng</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.ThongBaoRieng.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead>
                            <tr>
                                <th class="text-muted small fw-semibold">Sinh viên</th>
                                <th class="text-muted small fw-semibold">Tiêu đề</th>
                                <th class="text-muted small fw-semibold">Nội dung</th>
                                <th class="text-muted small fw-semibold">Ngày</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ThongBaoRieng)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@item.HoTen</strong>
                                            <br />
                                            <small class="text-muted">MSV: @item.MSV</small>
                                        </div>
                                    </td>
                                    <td class="fw-semibold">@item.TieuDe</td>
                                    <td class="text-muted small" style="max-width: 250px;">@item.NoiDung</td>
                                    <td class="text-secondary small">@item.NgayTBFormatted</td>
                                    <td class="text-center">
                                   
                                        <form asp-controller="QLThongBao" asp-action="Delete" method="post" style="display:inline;"
                                              onsubmit="return confirm('Bạn có chắc muốn xóa thông báo này không?');">
                                            <input type="hidden" name="id" value="@item.MaTB" />
                                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                        </form>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="p-4 text-center text-muted mb-0">
                    Chưa có thông báo riêng.
                </p>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="~/css/QuanLyThongBao.css" rel="stylesheet" />
}

@section Scripts {
    <script>
                document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.delete-btn');

            deleteButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');

                    if (!confirm('Bạn có chắc muốn xóa thông báo này không?')) return;

                    fetch('/QLThongBao/Delete', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ id: parseInt(id) })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Xóa thành công!');
                            location.reload(); // hoặc remove row khỏi table
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(err => console.error(err));
                });
            });
        });
    </script>
}