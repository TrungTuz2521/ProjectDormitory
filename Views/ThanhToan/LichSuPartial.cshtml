@model KTX.ViewModels.DanhSachLichSuViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/ThanhToan1.css" />
}

<div class="table-custom">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Loại</th>
                <th>Mã hóa đơn</th>
                <th>Phòng</th>
                <th>Kỳ thanh toán</th>
                <th>Số tiền</th>
                <th>Ngày thanh toán</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.DanhSachThanhToan != null && Model.DanhSachThanhToan.Any())
            {
                foreach (var payment in Model.DanhSachThanhToan)
                {
                    <tr>
                        <td>
                            @if (payment.LoaiThanhToan == "Tiền phòng")
                            {
                                <span class="badge bg-primary">
                                    <i class="bi bi-house-door me-1"></i>Tiền phòng
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-info">
                                    <i class="bi bi-lightning me-1"></i>Điện nước
                                </span>
                            }
                        </td>
                        <td><strong>@payment.MaHoaDon</strong></td>
                        <td>@payment.TenPhong</td>
                        <td>@payment.KyThanhToan</td>
                        <td><strong class="text-primary">@payment.TongTien.ToString("N0")₫</strong></td>
                        <td>
                            @if (payment.NgayThanhToan.HasValue)
                            {
                                <span>@payment.NgayThanhToan.Value.ToString("dd/MM/yyyy")</span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa thanh toán</span>
                            }
                        </td>
                        <td>
                            @if (payment.DaThanhToan)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Đã thanh toán
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-clock me-1"></i>Chưa thanh toán
                                </span>
                            }
                        </td>
                    </tr>
                   
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-4">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-2">Chưa có lịch sử thanh toán</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Tổng hợp -->
<div class="row mt-3">
    <div class="col-md-6">
        <div class="alert alert-success">
            <strong><i class="bi bi-check-circle me-2"></i>Đã thanh toán:</strong>
            @Model.TongDaThanhToan.ToString("N0")₫
            <span class="text-muted">(@Model.SoLanDaThanhToan lần)</span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="alert alert-warning">
            <strong><i class="bi bi-clock me-2"></i>Chưa thanh toán:</strong>
            @Model.TongChuaThanhToan.ToString("N0")₫
            <span class="text-muted">(@Model.SoLanChuaThanhToan lần)</span>
        </div>
    </div>
</div>