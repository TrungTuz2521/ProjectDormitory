@model KTX.ViewModels.ThanhToanDetailViewModel
@{
    ViewData["Title"] = "Thanh Toán & Dịch Vụ";
}

@section Styles{
    <link href="~/css/ThanhToan1.css" rel="stylesheet" />
}
@Html.AntiForgeryToken()

<div class="container-fluid py-4">
    <!-- Tiêu đề -->
    <div class="payment-header">
        <h1 class="mb-3"><i class="bi bi-credit-card me-2"></i>Thanh Toán & Dịch Vụ</h1>
        <p class="mb-2">Sinh viên: <strong>@Model.HoTen</strong> | Mã SV: <strong>@Model.MaSV</strong> | Phòng: <strong>@Model.TenPhong</strong></p>
        <p class="mb-0">Quản lý các khoản phí ký túc xá và thanh toán của bạn</p>
    </div>

   <!-- Thống kê tổng quan -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="stat-icon icon-blue">
                <i class="bi bi-house-door"></i>
            </div>
            <h6 class="text-muted mb-2">Phí Phòng</h6>
            <h3 class="mb-0">@Model.TienPhong.ToString("N0")₫</h3>
            <small class="text-success"><i class="bi bi-check-circle"></i> Cố định</small>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="stat-icon icon-orange">
                <i class="bi bi-lightning-charge"></i>
            </div>
            <h6 class="text-muted mb-2">Điện + Nước</h6>
            <h3 class="mb-0">@((Model.TienDien + Model.TienNuoc).ToString("N0"))₫</h3>
            @if (Model.SoNguoiTrongPhong > 0)
            {
                <small class="text-info">
                    <i class="bi bi-people"></i> Chia cho @Model.SoNguoiTrongPhong người
                </small>
            }
            else
            {
                <small class="text-warning">
                    <i class="bi bi-exclamation-triangle"></i> Chưa cập nhật số người
                </small>
            }
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="stat-icon icon-red">
                <i class="bi bi-exclamation-circle"></i>
            </div>
            <h6 class="text-muted mb-2">Tổng Phải Trả</h6>
            <h3 class="mb-0 text-danger">@Model.TongCong.ToString("N0")₫</h3>
            <small class="text-muted">@Model.TrangThaiThanhToan</small>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="stat-card">
            <div class="stat-icon icon-green">
                <i class="bi bi-check2-circle"></i>
            </div>
            <h6 class="text-muted mb-2">Trạng Thái</h6>
            <h3 class="mb-0">@Model.TrangThaiThanhToan</h3>
            @if (Model.DaThanhToan)
            {
                <small class="text-success">
                    <i class="bi bi-check-circle"></i> @Model.NgayThanhToan?.ToString("dd/MM/yyyy")
                </small>
            }
            else
            {var soNgayConLai = (Model.NgayKetThuc - DateTime.Now).Days;
                
                @if (soNgayConLai >= 0)
                {
                    <small class="text-warning">
                        <i class="bi bi-clock"></i> Còn @soNgayConLai ngày
                    </small>
                }
                else
                {
                    <small class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Quá hạn @Math.Abs(soNgayConLai) ngày
                    </small>
                }
            }
        </div>
    </div>
</div>

    <!-- Chi tiết hóa đơn -->
    <div class="mb-4">
        <h2 class="section-title">Hóa Đơn Cần Thanh Toán</h2>

        <div class="row d-flex align-items-stretch">
            <!-- Hóa đơn tiền phòng -->
            <div class="mb-3">
                <div class="invoice-card @(Model.DaThanhToan ? "paid" : "unpaid")">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-1"><i class="bi bi-house-door me-2"></i>Tiền Phòng</h5>
                        </div>
                        <span class="badge-@(Model.DaThanhToan ? "paid" : "pending")">@Model.TrangThaiThanhToan</span>
                    </div>

                    <div class="invoice-detail">
                        <span>Kỳ thanh toán</span>
                        <strong>@Model.NgayBatDau.ToString("MM/yyyy") - @Model.NgayKetThuc.ToString("MM/yyyy")</strong>
                    </div>
                    <div class="invoice-detail">
                        <span>Tiền phòng</span>
                        <strong>@Model.TienPhong.ToString("N0")₫</strong>
                    </div>
                    <div class="invoice-detail">
                        <span>Hạn thanh toán</span>
                        <strong class="text-danger">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</strong>
                    </div>
                    <div class="invoice-detail">
                        <span>TỔNG CỘNG</span>
                        <strong>@Model.TienPhong.ToString("N0")₫</strong>
                    </div>

                    @if (!Model.DaThanhToan)
                    {
                        <div class="mt-2 d-flex gap-2 justify-content-end align-items-center">
                            <select id="bankSelect_@Model.MaHD" class="form-select form-select-sm custom-select" style="width: 120px; font-size: 0.8rem;">
                                @foreach (var bank in Model.DanhSachNganHang ?? new List<KTX.ViewModels.BankInfoViewModel>())
                                {
                                    <option value="@bank.MaNganHang">@bank.MaNganHang</option>
                                }
                            </select>
                            <button class="btn btn-sm btn-qr enhanced-btn" onclick="showQRCode('room', @Model.MaHD, @Model.TienPhong)">
                                <i class="bi bi-qr-code me-1"></i>QR
                            </button>
                            <button class="btn btn-sm btn-pay enhanced-btn" onclick="processPayment('room', @Model.MaHD)">
                                <i class="bi bi-check-circle me-1"></i>Thanh toán
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Hóa đơn điện nước -->
            @if (Model.SoDien.HasValue || Model.SoNuoc.HasValue)
            {
                <div class=" mb-3">
                    <div class="invoice-card utility">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="mb-1"><i class="bi bi-lightning-charge me-2"></i>Điện Nước</h5>
                                <small class="text-muted">Thời gian ghi: @Model.ThoiGianGhi?.ToString("dd/MM/yyyy")</small>
                                <br />
                                @if (Model.SoNguoiTrongPhong > 0)
                                {
                                    <small class="text-info">
                                        <i class="bi bi-people me-1"></i>Chia cho @Model.SoNguoiTrongPhong người trong phòng
                                    </small>
                                }
                                else
                                {
                                    <small class="text-warning">
                                        <i class="bi bi-exclamation-triangle me-1"></i>Chưa có thông tin số người ở
                                    </small>
                                }
                            </div>
                            <span class="badge @(Model.DaThanhToan ? "bg-success" : "bg-warning text-dark")">@Model.TrangThaiThanhToan</span>
                        </div>

                        @if (Model.SoNguoiTrongPhong > 0)
                        {
                            <div class="alert alert-info py-2 mb-3">
                                <small>
                                    <i class="bi bi-info-circle me-1"></i>
                                    <strong>Tổng tiền điện nước phòng:</strong> @Model.TongTienDienNuocPhong.ToString("N0")₫
                                    <br />
                                    <i class="bi bi-arrow-down-short"></i>
                                    <strong>Mỗi người trả:</strong> @((Model.TongTienDienNuocPhong / Model.SoNguoiTrongPhong).ToString("N0"))₫
                                </small>
                            </div>
                        }

                        <div class="invoice-detail">
                            <span>Kỳ thanh toán</span>
                            <strong>@Model.ThoiGianGhi?.ToString("MM/yyyy")</strong>
                        </div>

                        @if (Model.SoDien.HasValue)
                        {
                            <div class="invoice-detail">
                                <span><i class="bi bi-lightning-fill text-warning"></i> Điện (@Model.SoDien kWh × @(Model.GiaDien?.ToString("N0") ?? "0")₫)</span>
                                <div>
                                    <small class="text-muted">Phòng: @Model.TongTienDienPhong.ToString("N0")₫</small>
                                    <br />
                                    <strong class="text-primary">Bạn: @Model.TienDien.ToString("N0")₫</strong>
                                </div>
                            </div>
                        }

                        @if (Model.SoNuoc.HasValue)
                        {
                            <div class="invoice-detail">
                                <span><i class="bi bi-droplet-fill text-info"></i> Nước (@Model.SoNuoc m³ × @(Model.GiaNuoc?.ToString("N0") ?? "0")₫)</span>
                                <div>
                                    <small class="text-muted">Phòng: @Model.TongTienNuocPhong.ToString("N0")₫</small>
                                    <br />
                                    <strong class="text-primary">Bạn: @Model.TienNuoc.ToString("N0")₫</strong>
                                </div>
                            </div>
                        }

                        <div class="invoice-detail">
                            <span>Hạn thanh toán</span>
                            <strong class="text-danger">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</strong>
                        </div>

                        <div class="invoice-detail border-top pt-2 mt-2" style="background-color: #fff3cd; margin: -10px; padding: 15px !important;">
                            <span><strong><i class="bi bi-cash-coin"></i> BẠN PHẢI TRẢ (Điện + Nước)</strong></span>
                            <strong class="text-danger fs-5">@((Model.TongTienDienNuocPhong / Model.SoNguoiTrongPhong).ToString("N0"))₫</strong>
                        </div>

                        @if (!Model.DaThanhToan)
                        {
                            <div class="mt-3 d-flex gap-2 justify-content-end align-items-center">
                                <select id="bankSelect_utility_@Model.MaHD" class="form-select form-select-sm custom-select" style="width: 120px; font-size: 0.8rem;">
                                    @foreach (var bank in Model.DanhSachNganHang ?? new List<KTX.ViewModels.BankInfoViewModel>())
                                    {
                                        <option value="@bank.MaNganHang">@bank.MaNganHang</option>
                                    }
                                </select>
                                <button class="btn btn-sm btn-qr enhanced-btn" onclick="showQRCode('utility', @Model.MaHD, @(Model.TienDien + Model.TienNuoc))">
                                    <i class="bi bi-qr-code me-1"></i>QR
                                </button>
                                <button class="btn btn-sm btn-pay enhanced-btn" onclick="processPayment('utility', @Model.MaHD)">
                                    <i class="bi bi-check-circle me-1"></i>Thanh toán
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
                     

            @if (Model.DaThanhToan)
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-success">Hóa đơn đã được thanh toán</h4>
                        <p class="text-muted">Ngày thanh toán: @Model.NgayThanhToan?.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Lịch sử thanh toán -->
    <div class="mb-4">
        <h2 class="section-title">Lịch Sử Thanh Toán</h2>
        <p class="text-muted mb-3">Hồ sơ các khoản thanh toán trước đây</p>

        <div class="table-custom" id="paymentHistoryContainer">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Đang tải...</span>
            </div>
        </div>
    </div>

    <!-- Thông tin sinh viên và hợp đồng -->
    <div class="mb-4">
        <h2 class="section-title">Thông Tin Hợp Đồng</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="info-card">
                    <h5><i class="bi bi-person me-2"></i>Thông Tin Sinh Viên</h5>
                    <div class="info-detail">
                        <span>Mã SV:</span>
                        <strong>@Model.MaSV</strong>
                    </div>
                    <div class="info-detail">
                        <span>Họ tên:</span>
                        <strong>@Model.HoTen</strong>
                    </div>
                    <div class="info-detail">
                        <span>Số điện thoại:</span>
                        <strong>@Model.SoDienThoai</strong>
                    </div>
                    <div class="info-detail">
                        <span>Email:</span>
                        <strong>@Model.Email</strong>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-card">
                    <h5><i class="bi bi-file-earmark-text me-2"></i>Thông Tin Hợp Đồng</h5>
                    <div class="info-detail">
                        <span>Mã hợp đồng:</span>
                        <strong>@Model.MaHD</strong>
                    </div>
                    <div class="info-detail">
                        <span>Ngày bắt đầu:</span>
                        <strong>@Model.NgayBatDau.ToString("dd/MM/yyyy")</strong>
                    </div>
                    <div class="info-detail">
                        <span>Ngày kết thúc:</span>
                        <strong>@Model.NgayKetThuc.ToString("dd/MM/yyyy")</strong>
                    </div>
                    <div class="info-detail">
                        <span>Trạng thái:</span>
                        <strong>@Model.TrangThaiHopDong</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal mã QR -->
    <div id="qrModal" class="qr-modal">
        <div class="qr-modal-content">
            <span class="qr-close" onclick="closeQRModal()">&times;</span>
            <h4 class="text-center mb-3"><i class="bi bi-qr-code me-2"></i>Quét Mã QR Để Thanh Toán</h4>

            <div class="qr-image" id="qrImageContainer">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
            </div>

            <div class="qr-info">
                <div class="qr-info-item">
                    <span>Loại thanh toán:</span>
                    <strong id="qrPaymentType"></strong>
                </div>
                <div class="qr-info-item">
                    <span>Mã hóa đơn:</span>
                    <strong id="qrInvoiceNumber"></strong>
                </div>
                <div class="qr-info-item">
                    <span>Số tiền:</span>
                    <strong class="text-danger" id="qrAmount"></strong>
                </div>
                <div class="qr-info-item">
                    <span>Ngân hàng:</span>
                    <strong id="qrBank"></strong>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle me-2"></i>
                <small>Sau khi chuyển khoản, vui lòng nhấn nút "Xác nhận đã trả" hoặc liên hệ ban quản lý để xác nhận thanh toán.</small>
            </div>

            <div class="text-center mt-3">
                <button class="btn btn-secondary" onclick="closeQRModal()">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        // Tải lịch sử thanh toán
        window.onload = function () {
            fetchPaymentHistory();
        };

        function fetchPaymentHistory() {
            const container = document.getElementById('paymentHistoryContainer');
            // ✅ Không cần truyền maSV nữa, controller tự lấy từ Claims
            fetch('@Url.Action("LichSu", "ThanhToan")')
                .then(response => response.text())
                .then(html => {
                    container.innerHTML = html;
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                    container.innerHTML = '<p class="text-danger">Không thể tải lịch sử thanh toán.</p>';
                });
        }

        // Hiển thị mã QR
        function showQRCode(type, invoiceId, amount) {
            const modal = document.getElementById('qrModal');
            const qrImageContainer = document.getElementById('qrImageContainer');
            const paymentTypeEl = document.getElementById('qrPaymentType');
            const invoiceNumberEl = document.getElementById('qrInvoiceNumber');
            const amountEl = document.getElementById('qrAmount');
            const bankEl = document.getElementById('qrBank');
            const bankSelect = document.getElementById(type === 'room' ? 'bankSelect_' + invoiceId : 'bankSelect_utility_' + invoiceId);
            const maNganHang = bankSelect.value;

            // Hiển thị modal
            modal.style.display = 'block';

            // Cập nhật thông tin
            paymentTypeEl.textContent = type === 'room' ? 'Tiền phòng' : 'Điện nước';
            invoiceNumberEl.textContent = `HD-${invoiceId}`;
            amountEl.textContent = amount.toLocaleString('vi-VN') + '₫';
            bankEl.textContent = bankSelect.options[bankSelect.selectedIndex].text;

            // Gọi API tạo mã QR
            fetch('@Url.Action("TaoQRCode", "ThanhToan")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    MaHD: invoiceId,
                    SoTien: amount,
                    MaNganHang: maNganHang,
                    NoiDung: `THANHTOAN HD${invoiceId} P@Model.MaPhong`,
                    TenKhachHang: '@Model.HoTen',
                    MaPhong: '@Model.MaPhong'
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    qrImageContainer.innerHTML = `<img src="${data.qrCodeUrl}" alt="Mã QR" style="max-width: 300px;">`;
                    bankEl.textContent = `${data.nganHang.tenNganHang} - ${data.nganHang.tenTaiKhoan}`;
                } else {
                    qrImageContainer.innerHTML = '<p class="text-danger">Không thể tạo mã QR: ' + data.message + '</p>';
                }
            })
            .catch(error => {
                console.error('Lỗi:', error);
                qrImageContainer.innerHTML = '<p class="text-danger">Có lỗi xảy ra khi tạo mã QR</p>';
            });
        }

        // Đóng modal
        function closeQRModal() {
            document.getElementById('qrModal').style.display = 'none';
        }

        // Đóng modal khi click bên ngoài
        window.onclick = function(event) {
            const modal = document.getElementById('qrModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Xử lý thanh toán
        function processPayment(type, invoiceId) {
            if (confirm('Bạn xác nhận đã thanh toán hóa đơn này?')) {
                fetch('@Url.Action("XacNhan", "ThanhToan")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({
                        MaHD: invoiceId,
                        MaGiaoDich: 'MANUAL-' + invoiceId,
                        SoTien: @(Model.TienPhong + Model.TienDien + Model.TienNuoc),
                        NgayThanhToan: new Date().toISOString(),
                        GhiChu: 'Thanh toán qua QR'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('✓ ' + data.message);
                        window.location.href = data.redirectUrl;
                    } else {
                        alert('✗ Thanh toán thất bại: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                    alert('✗ Có lỗi xảy ra trong quá trình thanh toán!');
                });
            }
        }
    </script>

}
