@model KTX.Models.ChiTietPhongViewModel

@{
    ViewData["Title"] = $"Chi tiết phòng {Model.MaP}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb & Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách phòng</a></li>
                    <li class="breadcrumb-item active">Phòng @Model.MaP</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold text-primary mb-0">
                    <i class="bi bi-door-open-fill me-2"></i>Chi tiết phòng @Model.MaP
                </h2>
                <a asp-action="Edit" asp-route-id="@Model.MaP" class="btn btn-warning">
                    <i class="bi bi-pencil-square me-2"></i>Cập nhật tình trạng
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thông tin phòng -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>Thông tin phòng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center p-4 bg-light rounded">
                                <i class="bi bi-house-fill text-primary" style="font-size: 4rem;"></i>
                                <h3 class="mt-3 fw-bold">Phòng @Model.MaP</h3>
                                @{
                                    var badgeClass = Model.TinhTrang switch
                                    {
                                        "Còn trống" => "bg-success",
                                        "Đầy" => "bg-danger",
                                        "Đang bảo trì" => "bg-warning text-dark",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass fs-6">@Model.TinhTrang</span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="border rounded p-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-tag text-primary me-2 fs-5"></i>
                                            <strong>Loại phòng:</strong>
                                        </div>
                                        <p class="mb-0 ms-4">@Model.LoaiPhong</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="border rounded p-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-gender-ambiguous text-primary me-2 fs-5"></i>
                                            <strong>Giới tính:</strong>
                                        </div>
                                        <p class="mb-0 ms-4">@Model.GioiTinh</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="border rounded p-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-people text-primary me-2 fs-5"></i>
                                            <strong>Sức chứa:</strong>
                                        </div>
                                        <p class="mb-0 ms-4">@Model.HienO / @Model.ToiDaO người</p>
                                        @{
                                            var progressPercent = Model.ToiDaO > 0 ? (Model.HienO * 100.0 / Model.ToiDaO) : 0;
                                            var progressClass = progressPercent >= 100 ? "bg-danger" :
                                            progressPercent >= 80 ? "bg-warning" : "bg-success";
                                        }
                                        <div class="progress mt-2" style="height: 20px;">
                                            <div class="progress-bar @progressClass"
                                                 style="width: @progressPercent%">
                                                @progressPercent.ToString("0.0")%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="border rounded p-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-cash-coin text-primary me-2 fs-5"></i>
                                            <strong>Giá phòng/tháng:</strong>
                                        </div>
                                        <p class="mb-0 ms-4 text-success fw-bold fs-5">
                                            @Model.TienPhong.ToString("N0") VNĐ
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách sinh viên đang ở -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-people-fill me-2"></i>Sinh viên đang ở
                        <span class="badge bg-white text-success ms-2">@Model.DanhSachSinhVien.Count người</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.DanhSachSinhVien.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>MSV</th>
                                        <th>Họ tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sv in Model.DanhSachSinhVien)
                                    {
                                        <tr>
                                            <td class="fw-bold">@sv.Msv</td>
                                            <td>
                                                <i class="bi bi-person-circle text-primary me-2"></i>
                                                @sv.HoTen
                                            </td>
                                            <td>@sv.Email</td>
                                            <td>@sv.Sdt</td>
                                            <td>@sv.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                                            <td>@sv.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <p class="mb-0">Chưa có sinh viên nào ở phòng này</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử hợp đồng -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-file-earmark-text me-2"></i>Lịch sử hợp đồng
                        <span class="badge bg-white text-info ms-2">@Model.LichSuHopDong.Count hợp đồng</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.LichSuHopDong.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã HĐ</th>
                                        <th>Sinh viên</th>
                                        <th>Ngày ký</th>
                                        <th>Thời gian</th>
                                        <th class="text-end">Tiền phòng</th>
                                        <th class="text-end">Tiền cọc</th>
                                        <th class="text-center">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hd in Model.LichSuHopDong)
                                    {
                                        <tr>
                                            <td class="fw-bold">HD-@hd.MaHd</td>
                                            <td>
                                                <div>@hd.TenSinhVien</div>
                                                <small class="text-muted">MSV: @hd.Msv</small>
                                            </td>
                                            <td>@hd.NgayKi?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <small>
                                                    @hd.NgayBatDau?.ToString("dd/MM/yyyy")
                                                    <i class="bi bi-arrow-right mx-1"></i>
                                                    @hd.NgayKetThuc?.ToString("dd/MM/yyyy")
                                                </small>
                                            </td>
                                            <td class="text-end">@hd.TienP.ToString("N0") VNĐ</td>
                                            <td class="text-end">@hd.TienCoc.ToString("N0") VNĐ</td>
                                            <td class="text-center">
                                                @{
                                                    var hdBadgeClass = hd.TrangThaiHd == "Đang hiệu lực" ? "bg-success" : "bg-secondary";
                                                }
                                                <span class="badge @hdBadgeClass">@hd.TrangThaiHd</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <p class="mb-0">Chưa có lịch sử hợp đồng</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Chỉ số điện nước -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-lightning-charge me-2"></i>Chỉ số điện nước
                        <span class="badge bg-dark ms-2">@Model.ChiSoDienNuoc.Count đợt</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.ChiSoDienNuoc.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center">Đợt</th>
                                        <th class="text-end">Tiền điện</th>
                                        <th class="text-end">Tiền nước</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th class="text-center">Ngày TT</th>
                                        <th class="text-center">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dn in Model.ChiSoDienNuoc)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">Đợt @dn.DotTtdn</td>
                                            <td class="text-end">@dn.TienDien.ToString("N0") VNĐ</td>
                                            <td class="text-end">@dn.TienNuoc.ToString("N0") VNĐ</td>
                                            <td class="text-end fw-bold text-primary">@dn.TongTienDn.ToString("N0") VNĐ</td>
                                            <td class="text-center">@dn.NgayTtdn?.ToString("dd/MM/yyyy")</td>
                                            <td class="text-center">
                                                @{
                                                    var dnBadgeClass = dn.TrangThaiTtdn == "Đã thanh toán" ? "bg-success" : "bg-danger";
                                                }
                                                <span class="badge @dnBadgeClass">@dn.TrangThaiTtdn</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <p class="mb-0">Chưa có dữ liệu điện nước</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }
</style>