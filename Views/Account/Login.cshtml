@model KTX.Models.LoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = null; // Không dùng layout chung, vì trang login có thiết kế riêng
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - KTX Giao Thông Vận Tải</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>

    <div class="header-logo">
        <img src="/images/LogoUTC.png" alt="Logo" />
    </div>
    <div class="title-logo">

        <img src="/images/LogoTittle.png" alt="Logo" />

    </div>
    <div class="header-title">
        Ký túc xá sinh viên Trường đại học Giao Thông Vận Tải
    </div>

    <div class="login-container">
        <h3 class="login-title">ĐĂNG NHẬP</h3>

        @* THAY ĐỔI: Thêm d-flex, flex-column, và align-items-center vào form *@
        @using (Html.BeginForm("Login", "Account", FormMethod.Post,
                new { @class = "form d-flex flex-column align-items-center" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3 w-100">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3 w-100">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn login-btn">ĐĂNG NHẬP</button>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>