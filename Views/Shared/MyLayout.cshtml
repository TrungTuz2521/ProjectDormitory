<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ký túc xá sinh viên</title>
    <!-- Bootstrap trước -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- CSS custom sau để override Bootstrap -->
    <link href="~/css/Layout.css" rel="stylesheet">
    @RenderSection("Styles", required: false) 
   

</head>
<!-- Nút "Lên đầu trang" -->
<button id="btnBackToTop" class="btn btn-primary rounded-circle" title="Lên đầu trang">
    <i class="bi bi-arrow-up"></i>
</button>

<style>
    #btnBackToTop {
        position: fixed;
        bottom: 30px;
        right: 30px;
        display: none;
        z-index: 9999;
        width: 45px;
        height: 45px;
        border-radius: 50%;
        font-size: 20px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        transition: all 0.3s ease-in-out;
    }

        #btnBackToTop:hover {
            transform: translateY(-3px);
        }
</style>

<script>
    const btn = document.getElementById("btnBackToTop");

    window.onscroll = () => {
        if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200)
            btn.style.display = "block";
        else
            btn.style.display = "none";
    };

    btn.onclick = () => {
        window.scrollTo({
            top: 0,
            behavior: "smooth"
        });
    };
</script>

<body>
    <!-- Top Navigation -->
    <partial name="_TopNav" />
    <!-- Left Sidebar -->
    <partial name="_LeftSideBar" />

    <!-- Main Content Area -->
    <main class="main-content" id="mainContent">
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <partial name="_Footer" />
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Layout.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>