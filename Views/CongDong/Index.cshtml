@model IEnumerable<KTX.Entities.BaiDang>

@{
    ViewData["Title"] = "Diễn đàn sinh viên";
}

@section Styles {
    
    <link href="~/css/CongDong.css" rel="stylesheet" />
}

<h2 class="text-center mt-4">Diễn đàn sinh viên</h2>
<hr />

<!-- Form thêm bài đăng -->
<form asp-action="ThemBaiDang" method="post" class="mb-4 ThemBaiDangCon">
    <h5 class="mb-3">
        <i class="bi bi-pencil-square text-primary me-2"></i>
        Tạo bài viết mới
    </h5>
    <div class="input-group">
        <textarea name="noiDung"
                  class="form-control post-textarea"
                  placeholder="Bạn đang nghĩ gì? Chia sẻ với mọi người..."
                  required></textarea>
        <button type="submit" class="btn btn-post btn-outline-primary btn-light m-2">
            <i class="bi bi-send-fill me-2"></i>
            Đăng bài
        </button>
    </div>
</form>

<div class="bg-light p-4 border-top border-success">
    @foreach (var bd in Model)
    {
        <div class="card shadow-sm mb-4 border-0">

            <!-- Header hiển thị MSV và ngày đăng -->
            <div class="card-header bg-success bg-opacity-10 border-success d-flex justify-content-between align-items-center rounded-top">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-circle text-success fs-4 me-2"></i>
                    <h5 class="mb-0 fw-semibold text-success">@bd.Msv</h5>
                </div>
                <small class="text-muted fst-italic">@bd.NgayDang?.ToString("dd/MM/yyyy")</small>
            </div>

            <!-- Thân bài đăng -->
            <div class="card-body bg-white rounded-bottom">
                <p class="mb-3 text-black-150">@bd.NoiDungBd</p>
                <hr />

                <!-- Danh sách bình luận -->
                <h6 class="text-success mb-3">
                    <i class="bi bi-chat-left-text me-1"></i> Bình luận
                </h6>

                @if (bd.TraLois != null && bd.TraLois.Any())
                {
                    <div class="ms-3 mb-3">
                        @foreach (var tl in bd.TraLois)
                        {
                            <div class="border-start border-3 border-secondary ps-3 mb-2">
                                <p class="mb-1">@tl.NoiDungTl</p>
                                <small class="text-muted">
                                    <i class="bi bi-person-circle me-1"></i>@tl.Msv — @tl.NgayTl?.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">Chưa có bình luận.</p>
                }

                <!-- Form thêm bình luận -->
                <form asp-action="ThemTraLoi" method="post" class="mt-3">
                    <input type="hidden" name="maBD" value="@bd.MaBd" />
                    <div class="input-group">
                        <input type="text" name="noiDungTL" class="form-control" placeholder="Viết bình luận..." required />
                        <button type="submit" class="btn btn-outline-success">
                            <i class="bi bi-send"></i> Gửi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>