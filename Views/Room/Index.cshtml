@section Scripts {
    <script>
        // Form validation cho đổi phòng
        document.getElementById('changeRoomForm')?.addEventListener('submit', function(e) {
            const noiDung = document.getElementById('noiDungYc').value.trim();

            if (noiDung.length < 20) {
                e.preventDefault();
                alert('Vui lòng nhập lý do đổi phòng ít nhất 20 ký tự!');
                return false;
            }
        });

        // Form validation cho hủy hợp đồng
        document.getElementById('cancelRoomForm')?.addEventListener('submit', function(e) {
            const noiDung = document.getElementById('noiDungHuy').value.trim();

            if (noiDung.length < 20) {
                e.preventDefault();
                alert('Vui lòng nhập lý do hủy hợp đồng ít nhất 20 ký tự!');
                return false;
            }

            if (!confirm('Bạn có chắc chắn muốn gửi yêu cầu hủy hợp đồng?\n\nLưu ý: Việc hủy sớm có thể phát sinh phí phạt.')) {
                e.preventDefault();
                return false;
            }
        });

        // Auto dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Smooth scroll animation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
}

