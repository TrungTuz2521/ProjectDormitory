@{
    ViewData["Title"] = "Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dashboard-container {
      
        min-height: 100vh;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.12);
        }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
        margin: 10px 0 5px 0;
    }

    .stat-label {
        color: #6c757d;
        font-size: 14px;
        font-weight: 500;
    }

    .chart-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        height: 100%;
    }

    .chart-title {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #2c3e50;
    }

    .request-item {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 12px;
        border-left: 4px solid #007bff;
        transition: background 0.2s;
    }

        .request-item:hover {
            background: #e9ecef;
        }

    .request-title {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .request-meta {
        font-size: 13px;
        color: #6c757d;
    }

    .badge-status {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .alert-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

        .alert-card h5 {
            margin-bottom: 10px;
            font-weight: 600;
        }

    .alert-item {
        background: rgba(255,255,255,0.15);
        border-radius: 8px;
        padding: 10px 15px;
        margin-bottom: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header {
        margin-bottom: 30px;
    }

        .page-header h2 {
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .page-header p {
            color: #6c757d;
            margin: 0;
        }

    /* Icon colors */
    .icon-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .icon-success {
        background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
        color: white;
    }

    .icon-warning {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .icon-info {
        background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
        color: white;
    }

    .icon-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
    }
</style>

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2>Dashboard Quản Lý KTX</h2>
        <p>Tổng quan hệ thống - Cập nhật lúc @DateTime.Now.ToString("HH:mm dd/MM/yyyy")</p>
    </div>

    <!-- Alert Section -->
    @if (ViewBag.HoaDonChuaThanhToan > 0 || ViewBag.PhongVuotSoLuong > 0)
    {
        <div class="alert-card">
            <h5><i class="bi bi-exclamation-triangle-fill"></i> Cảnh báo cần xử lý</h5>
            @if (ViewBag.HoaDonChuaThanhToan > 0)
            {
                <div class="alert-item">
                    <span><i class="bi bi-receipt"></i> Hóa đơn chưa thanh toán</span>
                    <span class="badge bg-light text-dark">@ViewBag.HoaDonChuaThanhToan hóa đơn</span>
                </div>
            }
            @if (ViewBag.PhongVuotSoLuong > 0)
            {
                <div class="alert-item">
                    <span><i class="bi bi-door-open"></i> Phòng vượt số lượng</span>
                    <span class="badge bg-light text-dark">@ViewBag.PhongVuotSoLuong phòng</span>
                </div>
            }
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Tổng sinh viên</div>
                        <div class="stat-value text-primary">@ViewBag.TongSinhVien</div>
                        <small class="text-muted">Đang ở KTX</small>
                    </div>
                    <div class="stat-icon icon-primary">
                        <i class="bi bi-people-fill"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Tỷ lệ lấp đầy</div>
                        <div class="stat-value text-success">@ViewBag.TyLeLapDay%</div>
                        <small class="text-muted">Phòng đang sử dụng</small>
                    </div>
                    <div class="stat-icon icon-success">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Yêu cầu chờ xử lý</div>
                        <div class="stat-value text-warning">@ViewBag.YeuCauChoCLy</div>
                        <small class="text-muted">Đang xử lý</small>
                    </div>
                    <div class="stat-icon icon-warning">
                        <i class="bi bi-clock-history"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Doanh thu tháng này</div>
                        <div class="stat-value text-info" style="font-size: 22px;">@ViewBag.TongDoanhThu.ToString("N0") đ</div>
                        <small class="text-muted">Phòng + Điện nước</small>
                    </div>
                    <div class="stat-icon icon-info">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-lg-8">
            <div class="chart-card">
                <h5 class="chart-title"><i class="bi bi-bar-chart-fill text-primary"></i> Biểu đồ doanh thu 6 tháng gần đây</h5>
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="chart-card">
                <h5 class="chart-title"><i class="bi bi-pie-chart-fill text-success"></i> Tỷ lệ sử dụng phòng</h5>
                <canvas id="roomChart" height="180"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Requests -->
    <div class="row">
        <div class="col-12">
            <div class="chart-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="chart-title m-0"><i class="bi bi-envelope-fill text-warning"></i> Yêu cầu mới nhất</h5>
                    <a href="@Url.Action("Index", "YeuCau")" class="btn btn-sm btn-outline-primary">
                        Xem tất cả <i class="bi bi-arrow-right"></i>
                    </a>
                </div>

                @if (ViewBag.YeuCauMoiNhat != null && ViewBag.YeuCauMoiNhat.Count > 0)
                {
                    foreach (var yc in ViewBag.YeuCauMoiNhat)
                    {
                        <div class="request-item">
                            <div class="d-flex justify-content-between align-items-start flex-wrap">
                                <div class="flex-grow-1 mb-2 mb-sm-0">
                                    <h6 class="mb-1">@yc.LoaiYc</h6>
                                    <p class="mb-1 text-muted small">
                                        @(yc.NoiDungYc?.Length > 50 ? yc.NoiDungYc.Substring(0, 50) + "..." : yc.NoiDungYc)
                                    </p>

                                    <div class="request-meta">
                                        <i class="bi bi-person"></i> MSV: @yc.Msv &nbsp;|&nbsp;
                                        <i class="bi bi-calendar"></i>@yc.NgayGuiYc.ToString("dd/MM/yyyy")

                                    </div>
                                </div>
                                <div>
                                    <span class="badge-status bg-warning text-dark">
                                        <i class="bi bi-hourglass-split"></i> @yc.TrangThaiYc
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 48px;"></i>
                        <p class="mt-3">Không có yêu cầu mới</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Revenue Chart
        fetch('@Url.Action("GetDoanhThuChart", "DashBoard")')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('revenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.map(d => d.thang),
                        datasets: [{
                            label: 'Tiền phòng',
                            data: data.map(d => d.tienPhong),
                            backgroundColor: 'rgba(102, 126, 234, 0.8)',
                            borderRadius: 8
                        }, {
                            label: 'Tiền điện nước',
                            data: data.map(d => d.tienDienNuoc),
                            backgroundColor: 'rgba(132, 250, 176, 0.8)',
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.dataset.label + ': ' + context.parsed.y.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                stacked: false,
                            },
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        }
                    }
                });
            });

        // Room Chart
        fetch('@Url.Action("GetTyLePhongChart", "DashBoard")')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('roomChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            data: data.data,
                            backgroundColor: [
                                'rgba(102, 126, 234, 0.8)',
                                'rgba(220, 220, 220, 0.8)'
                            ],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.label + ': ' + context.parsed + ' phòng';
                                    }
                                }
                            }
                        }
                    }
                });
            });
    </script>
}