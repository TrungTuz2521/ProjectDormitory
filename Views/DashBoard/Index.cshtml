@model KTX.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
	Layout = "~/Views/Shared/Layoutadmin.cshtml";
}

@section Styles{
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/Dashboard.css" rel="stylesheet"/>
}

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2>Dashboard Quản Lý KTX</h2>
        <p>Tổng quan hệ thống - Cập nhật lúc @DateTime.Now.ToString("HH:mm dd/MM/yyyy")</p>
    </div>

    <!-- Alert Section -->
    @if (Model.HoaDonChuaThanhToan > 0 || Model.PhongVuotSoLuong > 0)
    {
        <div class="alert-card">
            <h5><i class="bi bi-exclamation-triangle-fill"></i> Cảnh báo cần xử lý</h5>
            @if (Model.HoaDonChuaThanhToan > 0)
            {
                <div class="alert-item">
                    <span><i class="bi bi-receipt"></i> Hóa đơn chưa thanh toán</span>
                    <span class="badge bg-light text-dark">@Model.HoaDonChuaThanhToan hóa đơn</span>
                </div>
            }
            @if (Model.PhongVuotSoLuong > 0)
            {
                <div class="alert-item">
                    <span><i class="bi bi-door-open"></i> Phòng vượt số lượng</span>
                    <span class="badge bg-light text-dark">@Model.PhongVuotSoLuong phòng</span>
                </div>
            }
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Tổng sinh viên</div>
                        <div class="stat-value text-primary">@Model.TongSinhVien</div>
                        <small class="text-muted">Đang ở KTX</small>
                    </div>
                    <div class="stat-icon icon-primary">
                        <i class="bi bi-people-fill"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Tỷ lệ lấp đầy</div>
                        <div class="stat-value text-success">@Model.TyLeLapDay%</div>
                        <small class="text-muted">Phòng đang sử dụng</small>
                    </div>
                    <div class="stat-icon icon-success">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Yêu cầu chờ xử lý</div>
                        <div class="stat-value text-warning">@Model.YeuCauChoCLy</div>
                        <small class="text-muted">Đang xử lý</small>
                    </div>
                    <div class="stat-icon icon-warning">
                        <i class="bi bi-clock-history"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-label">Doanh thu tháng này</div>
                        <div class="stat-value text-info" style="font-size: 22px;">@Model.TongDoanhThu.ToString("N0") đ</div>
                        <small class="text-muted">Phòng + Điện nước</small>
                    </div>
                    <div class="stat-icon icon-info">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-lg-8">
            <div class="chart-card">
                <h5 class="chart-title"><i class="bi bi-bar-chart-fill text-primary"></i> Biểu đồ doanh thu 6 tháng gần đây</h5>
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="chart-card">
                <h5 class="chart-title"><i class="bi bi-pie-chart-fill text-success"></i> Tỷ lệ sử dụng phòng</h5>
                <canvas id="roomChart" height="180"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Requests -->
    <div class="row">
        <div class="col-12">
            <div class="chart-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="chart-title m-0"><i class="bi bi-envelope-fill text-warning"></i> Yêu cầu mới nhất</h5>
                    <a href="@Url.Action("Index", "YeuCau")" class="btn btn-sm btn-outline-primary">
                        Xem tất cả <i class="bi bi-arrow-right"></i>
                    </a>
                </div>

                @if (Model.YeuCauMoiNhat != null && Model.YeuCauMoiNhat.Count > 0)
                {
                    foreach (var yc in Model.YeuCauMoiNhat)
                    {
                        <div class="request-item">
                            <div class="d-flex justify-content-between align-items-start flex-wrap">
                                <div class="flex-grow-1 mb-2 mb-sm-0">
                                    <h6 class="mb-1">@yc.LoaiYc</h6>
                                    <p class="mb-1 text-muted small">
                                        @(yc.NoiDungYc?.Length > 50 ? yc.NoiDungYc.Substring(0, 50) + "..." : yc.NoiDungYc)
                                    </p>

                                    <div class="request-meta">
                                        <i class="bi bi-person"></i> MSV: @yc.Msv &nbsp;|&nbsp;
                                        <i class="bi bi-calendar"></i>@(yc?.NgayGuiYc?.ToString("dd/MM/yyyy") ?? "")

                                    </div>
                                </div>
                                <div>
                                    <span class="badge-status bg-warning text-dark">
                                        <i class="bi bi-hourglass-split"></i> @yc.TrangThaiYc
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 48px;"></i>
                        <p class="mt-3">Không có yêu cầu mới</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Revenue Chart
        fetch('@Url.Action("GetDoanhThuChart", "DashBoard")')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('revenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.map(d => d.thang),
                        datasets: [{
                            label: 'Tiền phòng',
                            data: data.map(d => d.tienPhong),
                            backgroundColor: 'rgba(102, 126, 234, 0.8)',
                            borderRadius: 8
                        }, {
                            label: 'Tiền điện nước',
                            data: data.map(d => d.tienDienNuoc),
                            backgroundColor: 'rgba(132, 250, 176, 0.8)',
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.dataset.label + ': ' + context.parsed.y.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                stacked: false,
                            },
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        }
                    }
                });
            });

        // Room Chart
        fetch('@Url.Action("GetTyLePhongChart", "DashBoard")')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('roomChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            data: data.data,
                            backgroundColor: [
                                'rgba(102, 126, 234, 0.8)',
                                'rgba(220, 220, 220, 0.8)'
                            ],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.label + ': ' + context.parsed + ' phòng';
                                    }
                                }
                            }
                        }
                    }
                });
            });
    </script>
  
}