@model KTX.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}

@section Styles {
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .dashboard-container {
            padding: 20px;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 35px;
            border-radius: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

            .page-header h2 {
                margin: 0;
                font-weight: 700;
                font-size: 32px;
            }

            .page-header p {
                margin: 10px 0 0 0;
                opacity: 0.9;
            }

        /* Alert Cards */
        .alert-section {
            margin-bottom: 30px;
        }

        .alert-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 8px 20px rgba(245, 87, 108, 0.4);
            animation: pulse 2s infinite;
        }

     

        

        .alert-card h5 {
            margin-bottom: 20px;
            font-weight: 700;
            font-size: 18px;
        }

        .alert-item {
            background: rgba(255,255,255,0.2);
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .alert-item:hover {
                background: rgba(255,255,255,0.3);
                transform: translateX(8px);
            }

            .alert-item:last-child {
                margin-bottom: 0;
            }

        /* Statistics Cards */
        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
            border-left: 5px solid;
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 100px;
                height: 100px;
                opacity: 0.05;
                transform: rotate(-15deg);
            }

            .stat-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            }

            .stat-card.primary {
                border-color: #667eea;
            }

            .stat-card.success {
                border-color: #28a745;
            }

            .stat-card.warning {
                border-color: #ffc107;
            }

            .stat-card.danger {
                border-color: #dc3545;
            }

            .stat-card.info {
                border-color: #17a2b8;
            }

        .stat-label {
            font-size: 13px;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 800;
            margin-bottom: 8px;
            line-height: 1;
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

            .stat-icon.primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }

            .stat-icon.success {
                background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
                color: white;
            }

            .stat-icon.warning {
                background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%);
                color: white;
            }

            .stat-icon.danger {
                background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
                color: white;
            }

            .stat-icon.info {
                background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
                color: white;
            }

        /* Room Status Cards */
        .room-stat-row {
            margin-bottom: 30px;
        }

        .room-stat-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

            .room-stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.12);
            }

        /* Charts */
        .chart-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            height: 100%;
        }

        .chart-title {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .chart-title_add {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 25px;
			margin-top: 10px;
            color: #2c3e50;
        }

        /* Tables & Lists */
        .table-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            margin-bottom: 25px;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .item-row {
            padding: 20px;
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
            border-radius: 8px;
            margin-bottom: 10px;
        }

            .item-row:hover {
                background: #f8f9fa;
                transform: translateX(5px);
            }

            .item-row:last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

        .badge-priority {
            padding: 8px 16px;
            border-radius: 25px;
            font-size: 12px;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .priority-high {
            background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
            color: white;
        }

        .priority-medium {
            background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%);
            color: white;
        }

        .priority-low {
            background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
            color: white;
        }

        /* Request Items */
        .request-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .request-item {
            background: white;
            border-left: 4px solid;
            padding: 20px;
            border-radius: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

            .request-item:hover {
                transform: translateX(8px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }

            .request-item.cho-xu-ly {
                border-color: #6c757d;
            }

            .request-item.dang-xu-ly {
                border-color: #ffc107;
            }

            .request-item.da-xu-ly {
                border-color: #28a745;
            }

        .badge-status {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .section-title {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px 18px;
            margin-bottom: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            color: #0b5ed7;
            border-radius: 12px;
            background: linear-gradient(135deg, #e9f2ff 0%, #f8fbff 100%);
            border-left: 5px solid #0b5ed7;
            box-shadow: 0 3px 10px rgba(11, 94, 215, 0.1);
            transition: all 0.25s ease-in-out;
        }

            .section-title i {
                font-size: 1.4rem;
                color: #0b5ed7;
                background: rgba(11, 94, 215, 0.1);
                padding: 8px;
                border-radius: 8px;
            }

            .section-title:hover {
                transform: translateY(-2px);
                background: linear-gradient(135deg, #dce8ff 0%, #f3f8ff 100%);
                box-shadow: 0 4px 14px rgba(11, 94, 215, 0.2);
            }

        .table-card {
            background: #ffffff;
            border-radius: 14px;
            padding: 20px;
            margin-bottom: 25px;
            border: 1px solid rgba(11, 94, 215, 0.08);
            box-shadow: 0 4px 15px rgba(11, 94, 215, 0.06);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .table-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(11, 94, 215, 0.1);
            }

        .table-header .btn {
            border-color: #0b5ed7 !important;
            color: #0b5ed7 !important;
            border-radius: 8px;
            padding: 6px 14px;
            font-weight: 500;
            transition: 0.25s;
        }

            .table-header .btn:hover {
                background-color: #0b5ed7 !important;
                color: #fff !important;
            }

        .badge-priority.priority-high {
            background: linear-gradient(90deg, #007bff, #0b5ed7);
            color: #fff;
            padding: 6px 10px;
            border-radius: 8px;
            font-weight: 500;
            box-shadow: 0 2px 6px rgba(11, 94, 215, 0.2);
        }

        .badge-priority.priority-medium {
            background: linear-gradient(90deg, #b2d8ff, #d9ecff);
            color: #0b5ed7;
            padding: 6px 10px;
            border-radius: 8px;
            font-weight: 500;
        }

     

        }
    </style>


<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <h2><i class="bi bi-speedometer2"></i> Dashboard Quản Lý KTX</h2>
        <p class="mb-0"><i class="bi bi-clock"></i> Cập nhật: @DateTime.Now.ToString("HH:mm - dd/MM/yyyy")</p>
    </div>

    <!-- CẢNH BÁO -->
    @if (Model.HoaDonQuaHan > 0 || Model.PhongVuotSoLuong > 0 || Model.YeuCauQuaHan > 0 || Model.HopDongSapHetHan > 0)
    {
        <div class="alert-section">
            <div class="alert-card">
                <h5><i class="bi bi-exclamation-triangle-fill"></i> CẢNH BÁO CẦN XỬ LÝ NGAY</h5>

                @if (Model.HoaDonQuaHan > 0)
                {
                    <div class="alert-item" onclick="scrollToSection('section-hoa-don')">
                        <span><i class="bi bi-receipt"></i> Hóa đơn quá hạn thanh toán</span>
                        <span class="badge bg-danger">@Model.HoaDonQuaHan hóa đơn</span>
                    </div>
                }

                @if (Model.PhongVuotSoLuong > 0)
                {
                    <div class="alert-item" onclick="scrollToSection('section-phong')">
                        <span><i class="bi bi-door-open"></i> Phòng vượt quá số lượng cho phép</span>
                        <span class="badge bg-danger">@Model.PhongVuotSoLuong phòng</span>
                    </div>
                }

                @if (Model.YeuCauQuaHan > 0)
                {
                    <div class="alert-item" onclick="scrollToSection('section-yeu-cau')">
                        <span><i class="bi bi-envelope-exclamation"></i> Yêu cầu chờ xử lý quá 7 ngày</span>
                        <span class="badge bg-danger">@Model.YeuCauQuaHan yêu cầu</span>
                    </div>
                }

                @if (Model.HopDongSapHetHan > 0)
                {
                    <div class="alert-item" onclick="scrollToSection('section-hop-dong')">
                        <span><i class="bi bi-calendar-x"></i> Hợp đồng sắp hết hạn (30 ngày)</span>
                        <span class="badge bg-warning text-dark">@Model.HopDongSapHetHan hợp đồng</span>
                    </div>
                }

            </div>
        </div>
    }

    <!-- THỐNG KÊ TỔNG QUAN -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <div class="stat-label">Tổng sinh viên hiện ở</div>
                        <div class="stat-value text-primary">@Model.TongSinhVien</div>
                        <small class="text-muted"><i class="bi bi-graph-up"></i> @Model.SinhVienMoi mới tháng này</small>
                    </div>
                    <div class="stat-icon primary">
                        <i class="bi bi-people-fill"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card success">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <div class="stat-label">Tỷ lệ lấp đầy</div>
                        <div class="stat-value text-success">@Model.TyLeLapDay%</div>
                        <small class="text-muted">@Model.PhongDangSuDung/@Model.TongPhong phòng</small>
                    </div>
                    <div class="stat-icon success">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card warning">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <div class="stat-label">Yêu cầu cần xử lý</div>
                        <div class="stat-value text-warning">@(Model.YeuCauChoXuLyCount + Model.YeuCauDangXuLyCount)</div>
                        <small class="text-muted">
                            @Model.YeuCauChoXuLyCount chờ | @Model.YeuCauDangXuLyCount đang xử lý
                        </small>
                    </div>
                    <div class="stat-icon warning">
                        <i class="bi bi-clock-history"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card info">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <div class="stat-label">Doanh thu tháng này</div>
                        <div class="stat-value text-info" style="font-size: 22px;">@Model.TongDoanhThu.ToString("N0")đ</div>
                        <small class="text-muted">
                            TT: @Model.TyLeThanhToan% | Nợ: @Model.TongTienConNo.ToString("N0")đ
                        </small>
                    </div>
                    <div class="stat-icon info">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TRẠNG THÁI PHÒNG -->
    <div class="row room-stat-row g-3 mb-4">
        <div class="col">
            <div class="room-stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Đang sử dụng</div>
                        <h3 class="mb-0 text-primary">@Model.PhongDangSuDung</h3>
                    </div>
                    <i class="bi bi-house-check-fill fs-1 text-primary opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="room-stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Còn <br /> trống</div>
                        <h3 class="mb-0 text-success">@Model.PhongTrong</h3>
                    </div>
                    <i class="bi bi-check-circle-fill fs-1 text-success opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="room-stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Phòng  <br /> đầy</div>
                        <h3 class="mb-0 text-danger">@Model.PhongDay</h3>
                    </div>
                    <i class="bi bi-x-circle-fill fs-1 text-danger opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="room-stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Đang bảo trì</div>
                        <h3 class="mb-0 text-warning">@Model.PhongDangBaoTri</h3>
                    </div>
                    <i class="bi bi-tools fs-1 text-warning opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="room-stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-label">Tổng phòng</div>
                        <h3 class="mb-0 text-info">@Model.TongPhong</h3>
                    </div>
                    <i class="bi bi-house-fill fs-1 text-info opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- BIỂU ĐỒ -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-lg-8">
            <div class="chart-card">
                <h5 class="chart-title_add">
                    <i class="bi bi-bar-chart-fill text-primary"></i> Doanh thu 6 tháng gần đây
                </h5>
                <canvas id="revenueChart" height="80"></canvas>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="chart-card">
                <h5 class="chart-title">
                    <i class="bi bi-pie-chart-fill text-success"></i> Tỷ lệ phòng
                </h5>
                <canvas id="roomChart" height="160"></canvas>
            </div>
        </div>
    </div>

    <!-- YÊU CẦU CẦN XỬ LÝ -->
@if (Model.YeuCauMoiNhat != null && Model.YeuCauMoiNhat.Any(y => y.TrangThaiYc == "Chờ xử lý" || y.TrangThaiYc == "Đang xử lý"))
{
        <div class="table-card mb-4" id="section-yeu-cau">
            <div class="table-header">
                <h5 class="chart-title m-0 section-title">
                    <i class="bi bi-list-task text-warning"></i> Yêu cầu cần xử lý
                </h5>
            </div>

            <div class="request-list" style="max-height: 400px; overflow-y: auto; overflow-x: hidden;">
                @foreach (var yc in Model.YeuCauMoiNhat.Where(y => y.TrangThaiYc == "Chờ xử lý" || y.TrangThaiYc == "Đang xử lý"))
                {
                    var cssClass = yc.TrangThaiYc == "Chờ xử lý" ? "cho-xu-ly" :
                    yc.TrangThaiYc == "Đang xử lý" ? "dang-xu-ly" : "da-xu-ly";

                    <div class="request-item @cssClass">
                        <div class="d-flex justify-content-between align-items-start gap-3">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                                        @yc.LoaiYc
                                    </span>
                                    @{
                                        var badgeClass = yc.TrangThaiYc switch
                                        {
                                            "Chờ xử lý" => "bg-secondary",
                                            "Đang xử lý" => "bg-warning",
                                            "Đã xử lý" => "bg-success",
                                            _ => "bg-secondary"
                                        };
                                        var iconClass = yc.TrangThaiYc switch
                                        {
                                            "Chờ xử lý" => "bi-clock",
                                            "Đang xử lý" => "bi-hourglass-split",
                                            "Đã xử lý" => "bi-check-circle",
                                            _ => "bi-circle"
                                        };
                                    }
                                    <span class="badge-status @badgeClass @(yc.TrangThaiYc == "Đang xử lý" ? "text-dark" : "text-white")">
                                        <i class="bi @iconClass"></i> @yc.TrangThaiYc
                                    </span>
                                </div>
                                <p class="mb-2 text-dark fw-medium">
                                    @(yc.NoiDungYc?.Length > 100 ? yc.NoiDungYc.Substring(0, 100) + "..." : yc.NoiDungYc)
                                </p>
                                <div class="d-flex flex-wrap gap-3 text-muted small">
                                    <span>
                                        <i class="bi bi-hash me-1"></i>
                                        <strong>Mã:</strong> @yc.MaYc
                                    </span>
                                    <span>
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @(yc?.NgayGuiYc?.ToString("dd/MM/yyyy") ?? "")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
}

    <!-- HÓA ĐƠN QUÁ HẠN -->
@if (Model.DanhSachHoaDonQuaHan != null && Model.DanhSachHoaDonQuaHan.Count > 0)
{
        <div class="table-card mb-4" id="section-hoa-don">
            <div class="table-header">
                <h5 class="chart-title m-0 section-title">
                    <i class="bi bi-receipt text-danger"></i> Hóa đơn quá hạn cần xử lý
                </h5>
            </div>

            <div style="max-height: 400px; overflow-y: auto; overflow-x: hidden;">
                @foreach (var hd in Model.DanhSachHoaDonQuaHan)
                {
                    <div class="item-row">
                        <div class="d-flex justify-content-between align-items-start flex-wrap">
                            <div class="flex-grow-1 mb-2 mb-sm-0">
                                <h6 class="mb-2 fw-bold">@hd.HoTen - MSV: @hd.Msv</h6>
                                <p class="small text-muted mb-2">
                                    <i class="bi bi-door-closed"></i> Phòng: <strong>@hd.MaPhong</strong> |
                                    <i class="bi bi-cash"></i> Số tiền: <strong class="text-danger">@hd.SoTien.ToString("N0")đ</strong>
                                </p>
                                <small class="text-danger fw-medium">
                                    <i class="bi bi-exclamation-circle"></i> Quá hạn @hd.SoNgayQuaHan ngày
                                    (Hạn: @hd.NgayHetHan.ToString("dd/MM/yyyy"))
                                </small>
                            </div>
                            <span class="badge-priority priority-high">
                                <i class="bi bi-exclamation-triangle"></i> Khẩn cấp
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
}

    <!-- HỢP ĐỒNG SẮP HẾT HẠN -->
@if (Model.DanhSachHopDongSapHetHan != null && Model.DanhSachHopDongSapHetHan.Count > 0)
{
        <div class="table-card" id="section-hop-dong">
            <div class="table-header">
                <h5 class="chart-title m-0 section-title">
                    <i class="bi bi-calendar-exclamation me-2"></i> Hợp đồng sắp hết hạn
                </h5>
            </div>

            <div style="max-height: 400px; overflow-y: auto; overflow-x: hidden;">
