                                }
                            }
                        }
                    }
                });
            });
               function scrollToSection(sectionId) {
            const target = document.getElementById(sectionId);
            if (target) {
                const yOffset = -100; 
                const y = target.getBoundingClientRect().top + window.pageYOffset + yOffset;
                window.scrollTo({ top: y, behavior: 'smooth' });
            }
        }

