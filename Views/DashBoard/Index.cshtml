            .then(data => {
                const ctx = document.getElementById('revenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.map(d => d.thang),
                        datasets: [{
                            label: 'Tiền phòng',
                            data: data.map(d => d.tienPhong),
                            backgroundColor: 'rgba(102, 126, 234, 0.8)',
                            borderRadius: 8
                        }, {
                            label: 'Tiền điện nước',
                            data: data.map(d => d.tienDienNuoc),
                            backgroundColor: 'rgba(132, 250, 176, 0.8)',
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.dataset.label + ': ' + context.parsed.y.toLocaleString('vi-VN') + 'đ';
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString('vi-VN') + 'đ';
                                    }
                                }
                            }
                        }
                    }
                });
            });

        // Room Chart
        fetch('@Url.Action("GetTyLePhongChart", "DashBoard")')
